<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/index_top_gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <com.example.goldfoxchina.Bean.DetialGallery
            android:id="@+id/photogallery_gallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </com.example.goldfoxchina.Bean.DetialGallery>

        <!-- 小圆点 -->

        <LinearLayout
            android:id="@+id/photogallery_circle_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/photogallery_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/bt_close" />
    </FrameLayout>

</LinearLayout>