<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_gridview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layout_gridview_item_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_04" 
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <FrameLayout
            android:id="@+id/frame_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/layout_gridview_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="12345" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>