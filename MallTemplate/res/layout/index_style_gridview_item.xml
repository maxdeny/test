<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_gridview_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_color_sortitem_gridview"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/layout_gridview_item_img"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:layout_weight="6"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/default_04" />

    <FrameLayout
        android:id="@+id/frame_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/white" >
        <TextView
            android:id="@+id/layout_gridview_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="10sp"
            android:text="12345"
            android:textColor="@color/black" />
    </FrameLayout>

</LinearLayout>