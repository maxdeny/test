<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/top">
        <ImageButton android:id="@+id/go_back_to_indexActivity"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingTop="10dp"
                     android:background="@drawable/ret_01"
                     android:layout_centerVertical="true"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:padding="5dp"
                  android:text="@string/index_goods_list_title"
                  android:textColor="#FFFFFF"
                  android:textSize="20sp"/>
        <ImageButton android:id="@+id/go_to_add_detail_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ret_01"
                android:visibility="invisible"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="17sp"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightgray" >
        <GridView android:id="@+id/from_index_style_gridview"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="10dp"
                  android:cacheColorHint="@android:color/transparent"
                  android:horizontalSpacing="10dp"
                  android:fadingEdge="none"
                  android:listSelector="@android:color/transparent"
                  android:numColumns="4"
                  android:scrollbars="none"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:verticalSpacing="10dp" />
    </LinearLayout>
</LinearLayout>