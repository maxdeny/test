<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clic_gray"
    android:orientation="horizontal"
    android:padding="5dip" >

    <com.mdx.mobile.widget.MImageView
        android:id="@+item_movielist/productimg"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_h_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+item_movielist/productname"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+item_movielist/logistics_star1"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_movielist/logistics_star2"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+item_movielist/logistics_star1"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_movielist/logistics_star3"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+item_movielist/logistics_star2"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_movielist/logistics_star4"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+item_movielist/logistics_star3"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_movielist/logistics_star5"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+item_movielist/logistics_star4"
                android:background="@drawable/merchant_star" />

            <TextView
                android:id="@+item_movielist/price"
                style="@style/text20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+item_movielist/arrow"
                android:textColor="@color/sysset_red" />

            <ImageView
                android:id="@+item_movielist/arrow"
                android:layout_width="8.8dip"
                android:layout_height="11.3dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dip"
                android:background="@drawable/more_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+item_movielist/sell"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>