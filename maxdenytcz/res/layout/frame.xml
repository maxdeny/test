<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+frame/linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.mdx.mobile.widget.AMLayout
        android:id="@+frame/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="66dip"
        android:background="@color/white" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="66dip"
        android:layout_marginTop="-66dp" >

        <com.wjwl.mobile.taocz.widget.MRadioGroup
            android:id="@+frame/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:checkedButton="@+frame/homeindex"
            android:orientation="horizontal" >

            <com.wjwl.mobile.taocz.widget.MRadioButton
                android:id="@+frame/navi"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/navi_v3index_btn1"
                android:button="@null"
                android:visibility="gone" />

            <com.wjwl.mobile.taocz.widget.MRadioButton
                android:id="@+frame/homeindex"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/navi_v3index_btn1"
                android:button="@null" />

            <com.wjwl.mobile.taocz.widget.MRadioButton
                android:id="@+frame/per"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/navi_v3index_btn2"
                android:button="@null"
                android:gravity="center"
                android:padding="0dp" />

            <com.wjwl.mobile.taocz.widget.MRadioButton
                android:id="@+frame/myinfo"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/navi_v3index_btn3"
                android:button="@null" />

            <com.wjwl.mobile.taocz.widget.MRadioButton
                android:id="@+frame/shopcart"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/navi_v3index_btn4"
                android:button="@null"
                android:textColor="@color/white"
                android:textSize="18px" />

            <com.wjwl.mobile.taocz.widget.MRadioButton
                android:id="@+frame/more"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/navi_v3index_btn5"
                android:button="@null"
                android:gravity="center"
                android:padding="0dp" />
        </com.wjwl.mobile.taocz.widget.MRadioGroup>

        <com.wjwl.mobile.taocz.widget.CurrView
            android:id="@+frame/cv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>

</LinearLayout>