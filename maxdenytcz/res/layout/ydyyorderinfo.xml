<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical">
     <RelativeLayout
        android:id="@+ydyyorderinfo/headlayout"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@drawable/head_redandorg"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
         >

          <Button
            android:id="@+ydyyorderinfo/back"
            android:layout_width="58dip"
            android:layout_height="32dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:background="@drawable/head_left"
            />
          
        <TextView
            android:id="@+ydyyorderinfo/text"
            style="@style/headtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            />
        
        <Button
            android:visibility="gone"
            android:id="@+ydyyorderinfo/saixuan"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="筛选"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:background="@drawable/btn_head_left"
             />
        
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="@drawable/bg_index2"/>
    
    <LinearLayout 
        android:layout_margin="8dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dip"
        android:gravity="center_vertical"
        android:background="@drawable/listview_bg14"
        android:id="@+ydyyorderinfo/product_linear">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dip">
            <TextView 
                android:id="@+ydyyorderinfo/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
            <TextView 
                android:layout_marginTop="2dip"
                android:id="@+ydyyorderinfo/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/more_arrow"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listview_bg14">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:id="@+ydyyorderinfo/state"
            android:layout_marginLeft="8dip"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/listview_line"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:id="@+ydyyorderinfo/who"
            android:layout_marginLeft="8dip"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/listview_line"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:id="@+ydyyorderinfo/phone"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/listview_line"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:id="@+ydyyorderinfo/eattime"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/listview_line"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginLeft="8dip"
            android:gravity="center_vertical"
            android:id="@+ydyyorderinfo/number"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/listview_line"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:id="@+ydyyorderinfo/house"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/listview_line"/>
    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <Button 
            android:id="@+ydyyorderinfo/cancel"
            android:layout_width="120dip"
            android:layout_height="38dip"
            android:background="@drawable/bt_restaurantdetails"
            android:text="取消订单"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>