<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_update_white"
    android:paddingBottom="2dip"
    android:paddingTop="2dip" >

    <RelativeLayout
        android:layout_width="240dip"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/other_text1"
            android:id="@+com_dialog/title"
            style="@style/headtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/bg_update_head"
            android:gravity="center"
            android:padding="5dip"
            android:textColor="@color/white" />

        <ScrollView
            android:id="@+com_dialog/scrollview"
            android:layout_width="fill_parent"
            android:layout_height="260dip"
            android:layout_below="@+com_dialog/title"
            android:padding="6dip"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginTop="10dip"
                    android:id="@+com_dialog/Info"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+com_dialog/close"
            style="@style/bt_text"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_below="@+com_dialog/scrollview"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/btn_exit"
            android:text="@string/com_close"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>