<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    
     >
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="center"
         android:padding="10dp"
    	 android:id="@+id/layout"
         android:background="@drawable/icon_quan_border_gray"
         >
         
   
    <ImageView 
        android:id="@+id/coupon_canuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_quan_out"/>
	<LinearLayout 
	    android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="4"
	    android:orientation="vertical"
	    android:layout_marginLeft="5dp" >
	    <TextView 
	        android:id="@+id/coupon_type"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="满减券"
	        />
	    <TextView 
	        android:id="@+id/coupon_data"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="12sp"
	        android:text="2014.06.30 - 2014.07.06"
	        />
    </LinearLayout>
    
	<LinearLayout 
	    android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
	    android:orientation="vertical" >
	    <TextView 
	        android:id="@+id/coupon_money"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:gravity="right"
			android:textColor="@color/orange"
	        android:text="￥ 100 "
	        />
	    <TextView 
	        android:id="@+id/coupon_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="10sp"
	        android:gravity="right"
	        android:text="满100使用asadsadasdadsdasdas"
	        />
    </LinearLayout>
      </LinearLayout>
</LinearLayout>
