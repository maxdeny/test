<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="400dip"
    android:background="@drawable/v3_list1_bg"
    android:id="@+pp/linearlayout"
    >

        <ListView
            android:id="@+pp/listview1"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:fadeScrollbars="true"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:divider="@drawable/line2"
            android:dividerHeight="0.66dip"
            />
        <!-- android:divider="@drawable/tuangou_list_12" -->
		<LinearLayout 
		    android:id="@+pp/linear"
		    android:layout_width="160dip"
		    android:layout_height="fill_parent"
		    android:background="@drawable/v3_list2_bg"
		    android:visibility="gone">
		    <ListView
            android:id="@+pp/listview2"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:divider="@drawable/line2"
            android:dividerHeight="0.66dip"
            android:listSelector="#00000000"/>
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+pp/linear2"
		    android:layout_width="160dip"
		    android:layout_height="fill_parent"
		    android:visibility="gone">
		    <ListView
            android:id="@+pp/listview3"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:divider="#00000000"
            android:listSelector="#00000000"
            />
		    </LinearLayout>
         

</LinearLayout>