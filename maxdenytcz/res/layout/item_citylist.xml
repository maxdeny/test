<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 字母隐藏 -->

    <TextView
        android:id="@+id/text_first_char_hint"
        style="@style/text"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@color/black_light"
        android:ellipsize="marquee"
        android:paddingLeft="10dip"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:visibility="gone" >
    </TextView>

    <ImageView
        android:id="@+id/text_first_char_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_gray"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/text_website_name"
        style="@style/text"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/bg_com_color_gray"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:textColor="@android:color/background_dark" >
    </TextView>

</LinearLayout>