<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/allbg"
    android:orientation="vertical" >

    <com.wjwl.mobile.taocz.widget.TczV3_HeadLayout
        android:id="@+tczv3/header"
        android:layout_width="fill_parent"
        android:layout_height="44dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_frame_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/user" />

        <EditText
            android:id="@+reg/ed_username"
            style="@style/text16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请设置用户名"
            android:inputType="text"
            android:padding="10dip"
            android:textColor="@color/text333333" />
    </LinearLayout>

    <TextView
        style="@style/text12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="5到25个字符，1个汉字为2个字符"
        android:textColor="@color/text999999" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_frame_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+reg/icon_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/lock" />

        <EditText
            android:id="@+reg/ed_psw"
            style="@style/text16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dip"
            android:layout_toRightOf="@+reg/icon_lock"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="10dip"
            android:textColor="@color/text333333" />

        <CheckBox
            android:id="@+reg/chk"
            style="@style/LoginCheckBox2"
            android:layout_width="54dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip" />
    </RelativeLayout>

    <TextView
        style="@style/text12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="6-16位字符，请用字母加数字或符号组合的密码"
        android:textColor="@color/text999999" />

</LinearLayout>