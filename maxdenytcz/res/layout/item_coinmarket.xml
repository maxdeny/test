<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="148dip"
    android:layout_height="190dip"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.mdx.mobile.widget.MImageView
        android:id="@+item_coinmarket/img"
        android:layout_width="148dip"
        android:layout_height="148dip"
        android:scaleType="fitXY"
        android:src="@drawable/default_h_bg" />

    <TextView
        android:id="@+item_coinmarket/title"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/sysset_text1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="20dip" >

        <ImageView
            android:id="@+item_coinmarket/price"
            android:layout_width="17.3dip"
            android:layout_height="20dip"
            android:src="@drawable/coinmarket_price" />

        <TextView
            android:id="@+item_coinmarket/new_price"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+item_coinmarket/price"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/sysset_red" />
    </RelativeLayout>

    <Button
        android:id="@+item_coinmarket/buy"
        style="@style/bt_text"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/btn_login_login"
        android:text="@string/btn_coinmarket"
        android:textColor="@color/white" />

</LinearLayout>