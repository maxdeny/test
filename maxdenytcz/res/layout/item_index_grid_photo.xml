<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false" 
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <com.wjwl.mobile.taocz.widget.FrameLayoutFill
        android:id="@+item_index_list/left_item_f"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1" >

        <com.mdx.mobile.widget.HalfLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <com.mdx.mobile.widget.MImageView
                android:id="@+item_index_list/image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_h_bg" />

            <TextView
                android:id="@+item_index_list/text"
                style="@style/item_index_grid_text"
                android:maxLines="3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" />
            
             <TextView
                android:layout_marginLeft="5dip"
                android:id="@+item_index_list/text2"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="3"
                android:gravity="center" />
            
            <TextView
                android:id="@+item_index_list/text3"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:layout_marginRight="5dip"
                android:maxLines="3"
                android:gravity="center" />
        </com.mdx.mobile.widget.HalfLayout>

        <View
            android:id="@+item_index_list/click"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_button_click_default"
            android:clickable="true" >
        </View>
    </com.wjwl.mobile.taocz.widget.FrameLayoutFill>

    <com.wjwl.mobile.taocz.widget.FrameLayoutFill
        android:id="@+item_index_list/right_item_f"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:visibility="gone" >

        <com.mdx.mobile.widget.HalfLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+item_index_list/text"
                style="@style/item_index_grid_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:maxLines="3"
                android:gravity="center" />
            
             <TextView
                android:layout_marginLeft="5dip"
                android:id="@+item_index_list/text2"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="3"
                android:gravity="center" />
            
            <TextView
                android:id="@+item_index_list/text3"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:layout_marginRight="5dip"
                android:maxLines="3"
                android:gravity="center" />

            <com.mdx.mobile.widget.MImageView
                android:id="@+item_index_list/image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_h_bg" />
        </com.mdx.mobile.widget.HalfLayout>

        <View
            android:id="@+item_index_list/click"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_button_click_default"
            android:clickable="true" >
        </View>
    </com.wjwl.mobile.taocz.widget.FrameLayoutFill>

    <com.wjwl.mobile.taocz.widget.FrameLayoutFill
        android:id="@+item_index_list/left_item_s"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1" >

        <com.mdx.mobile.widget.HalfLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <com.mdx.mobile.widget.MImageView
                android:id="@+item_index_list/image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_h_bg" />

            <TextView
                android:id="@+item_index_list/text"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="3"
                android:layout_marginLeft="5dip"
                android:gravity="center" />
            
            <TextView
                android:layout_marginLeft="5dip"
                android:id="@+item_index_list/text2"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="3"
                android:gravity="center" />
            
            <TextView
                android:id="@+item_index_list/text3"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:layout_marginRight="5dip"
                android:maxLines="3"
                android:gravity="center" />
        </com.mdx.mobile.widget.HalfLayout>

        <View
            android:id="@+item_index_list/click"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_button_click_default"
            android:clickable="true" >
        </View>
    </com.wjwl.mobile.taocz.widget.FrameLayoutFill>

    <com.wjwl.mobile.taocz.widget.FrameLayoutFill
        android:id="@+item_index_list/right_item_s"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:visibility="gone" >

        <com.mdx.mobile.widget.HalfLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+item_index_list/text"
                style="@style/item_index_grid_text"
                android:layout_width="fill_parent"
                android:maxLines="3"
                android:layout_height="fill_parent"
                android:gravity="center" />
            
             <TextView
                android:layout_marginLeft="5dip"
                android:id="@+item_index_list/text2"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="3"
                android:gravity="center" />
            
            <TextView
                android:id="@+item_index_list/text3"
                style="@style/item_index_grid_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:layout_marginRight="5dip"
                android:maxLines="3"
                android:gravity="center" />

            <com.mdx.mobile.widget.MImageView
                android:id="@+item_index_list/image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_h_bg" />
        </com.mdx.mobile.widget.HalfLayout>

        <View
            android:id="@+item_index_list/click"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_button_click_default"
            android:clickable="true" >
        </View>
    </com.wjwl.mobile.taocz.widget.FrameLayoutFill>

    <RelativeLayout
        android:id="@+item_index_list/fillPhotoLayout"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_marginTop="5dp"
         >

        <com.mdx.mobile.widget.MImageView
            android:id="@+item_index_list/fillPhoto"
            android:layout_width="fill_parent"
            android:layout_height="66dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/default_h_bg" 
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_item_index_list_text"
            android:layout_below="@+item_index_list/fillPhoto"
            >
               <TextView
                android:id="@+item_index_list/text"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="20dip"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                />
           <TextView
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+item_index_list/text"
                android:id="@+item_index_list/text2"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                />
            
            <TextView
                android:id="@+item_index_list/text3"
                android:layout_width="80dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center" />
            
        </RelativeLayout>
       
        <View
            android:id="@+item_index_list/click"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_button_click_default"
            android:clickable="true" 
            >
        </View>
    </RelativeLayout>

</LinearLayout>