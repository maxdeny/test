<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.wjwl.mobile.taocz.widget.TczV3_HeadLayout
        android:id="@+tczv3/header"
        android:layout_width="fill_parent"
        android:layout_height="44dip" />

    <RelativeLayout
        android:id="@+edit_address/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+tczv3/header"
        android:layout_marginLeft="6.7dip"
        android:layout_marginRight="6.7dip"
        android:layout_marginTop="14.7dip"
        android:background="@drawable/bg_frame_gray" >

        <LinearLayout
            android:id="@+edit_address/clic_layout1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+edit_address/tv_consignee"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/consignee_consignee"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+edit_address/edit_consignee"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="34dip"
                android:layout_weight="7"
                android:background="@drawable/edit_com" />
        </LinearLayout>

        <ImageView
            android:id="@+edit_address/line1"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+edit_address/clic_layout1"
            android:background="@drawable/line_gray" />

        <LinearLayout
            android:id="@+edit_address/clic_layout2"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+edit_address/line1"
            android:gravity="center_vertical"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+edit_address/tv_mobilephone"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/consignee_mobilephone"
                android:textColor="@color/textColor" >
            </TextView>

            <EditText
                android:id="@+edit_address/edit_mobile"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="34dip"
                android:layout_weight="7"
                android:background="@drawable/edit_com"
                android:inputType="phone" />
        </LinearLayout>

        <ImageView
            android:id="@+edit_address/line2"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+edit_address/clic_layout2"
            android:background="@drawable/line_gray" />

        <LinearLayout
            android:id="@+edit_address/clic_layout3"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+edit_address/line2"
            android:gravity="center_vertical"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+edit_address/tv_telphone"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/consignee_telphone"
                android:textColor="@color/textColor" >
            </TextView>

            <EditText
                android:id="@+edit_address/edit_telphone"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="34dip"
                android:layout_weight="7"
                android:background="@drawable/edit_com"
                android:inputType="phone" />
        </LinearLayout>

        <ImageView
            android:id="@+edit_address/line3"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+edit_address/clic_layout3"
            android:background="@drawable/line_gray" />

        <LinearLayout
            android:id="@+edit_address/clic_layout4"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+edit_address/line3"
            android:gravity="center_vertical"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+edit_address/tv_area"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/consignee_area"
                android:textColor="@color/textColor" >
            </TextView>

            <LinearLayout
                android:id="@+edit_address/arealayout1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="7" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+edit_address/bt_area"
                        style="@style/text"
                        android:layout_width="fill_parent"
                        android:layout_height="34dip"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edit_com"
                        android:gravity="left" />

                    <Button
                        android:id="@+edit_address/bt_spinner"
                        android:layout_width="30dip"
                        android:layout_height="32.6dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/newddress_spinner" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+edit_address/area_layout"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible" >

                    <Button
                        android:id="@+edit_address/bt_area2"
                        style="@style/text"
                        android:layout_width="fill_parent"
                        android:layout_height="34dip"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edit_com"
                        android:gravity="left" />

                    <Button
                        android:id="@+edit_address/bt_spinner2"
                        android:layout_width="30dip"
                        android:layout_height="32.6dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/newddress_spinner" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+edit_address/arealayout2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+edit_address/area"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor" >
                </TextView>

                <Button
                    android:id="@+edit_address/bt_edit"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/btn_login_login"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip"
                    android:text="@string/edit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+edit_address/line4"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+edit_address/clic_layout4"
            android:background="@drawable/line_gray" />

        <LinearLayout
            android:id="@+edit_address/clic_layout5"
            android:layout_width="fill_parent"
            android:layout_height="76dip"
            android:layout_below="@+edit_address/line4"
            android:gravity="center_vertical"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+edit_address/tv_address"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/consignee_address"
                android:textColor="@color/textColor" >
            </TextView>

            <EditText
                android:id="@+edit_address/edit_address"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="60dip"
                android:layout_weight="7"
                android:background="@drawable/edit_com" />
        </LinearLayout>

        <ImageView
            android:id="@+edit_address/line5"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+edit_address/clic_layout5"
            android:background="@drawable/line_gray" />

        <RelativeLayout
            android:id="@+edit_address/clic_layout6"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+edit_address/line5"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <CheckBox
                android:id="@+edit_address/checkbox"
                style="@style/LoginCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dip"
                android:text="@string/consignee_setdefault"
                android:textColor="@color/textColor" />
        </RelativeLayout>

        <ImageView
            android:id="@+edit_address/line6"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+edit_address/clic_layout6"
            android:background="@drawable/line_gray" />

        <RelativeLayout
            android:id="@+edit_address/clic_layout7"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+edit_address/line6"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <Button
                android:id="@+edit_address/bt_submit"
                style="@style/bt_text"
                android:layout_width="fill_parent"
                android:layout_height="32dip"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_login_login"
                android:text="@string/com_submit"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>