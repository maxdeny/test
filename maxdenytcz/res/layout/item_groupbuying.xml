<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+item_groupbuying/layout1"
        android:layout_width="280dip"
        android:layout_height="392dip"
        android:layout_gravity="center"
        android:background="@drawable/bg_itemgroup"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="278.7dip"
            android:layout_height="49.3dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/group_itemhead_bg"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:id="@+item_groupbuying/newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <Button
                android:id="@+item_groupbuying/bt_see"
                style="@style/bt_text"
                android:layout_width="70dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/bt_group_see"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/white" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_gray" />

        <LinearLayout
            android:layout_width="278.7dip"
            android:layout_height="59.3dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/group_text_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dip" >

            <TextView
                android:id="@+item_groupbuying/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <com.mdx.mobile.widget.MImageView
                android:id="@+item_groupbuying/img"
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_centerHorizontal="true"
                android:background="#88eeeeee"
                android:contentDescription="@string/app_name"
                android:src="@drawable/default_h_bg" />

            <View
                android:id="@+item_groupbuying/clic_view"
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_groupbuying_tex2"
                android:textColor="@color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+item_groupbuying/oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/sysset_red"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+item_groupbuying/zhekou"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+item_groupbuying/buynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7ab41f"
                android:textSize="18sp" />

            <TextView
                android:id="@+item_groupbuying/buynum"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_groupbuying_tex3"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+item_groupbuying/businessname"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColor" />

            <Button
                android:id="@+item_groupbuying/bt_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+item_groupbuying/businessaddress"
                android:background="@drawable/group_itemicon"
                android:visibility="gone" />

            <TextView
                android:id="@+item_groupbuying/businessaddress"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxWidth="120dip"
                android:singleLine="true"
                android:textColor="@color/textColor" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>