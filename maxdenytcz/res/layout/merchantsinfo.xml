<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+merchantsinfo/layout1"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@drawable/head_redandorg" >

        <TextView
            style="@style/headtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="@string/head_mechantsinfo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+merchantsinfo/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+merchantsinfo/layout1"
        android:layout_marginLeft="6.7dip"
        android:layout_marginRight="6.7dip"
        android:layout_marginTop="14dip"
        android:background="@drawable/bg_frame_gray" >

        <RelativeLayout
            android:id="@+merchantsinfo/clic_layout1"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+merchantsinfo/merchantsinfo_img"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+merchantsinfo/merchantsinfo_img"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dip" >

                <TextView
                    android:id="@+merchantsinfo/merchantsinfo_name"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/merchantsinfo_text1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+merchantsinfo/merchantsinfo_tvconsume"
                        style="@style/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mechantsinfo_person_consume"
                        android:textColor="@color/merchantsinfo_text2" />

                    <TextView
                        android:id="@+merchantsinfo/merchantsinfo_consume"
                        style="@style/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/merchantsinfo_text2" />
                </LinearLayout>

                <TextView
                    android:id="@+merchantsinfo/merchantsinfo_introduce"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/merchantsinfo_text2" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+merchantsinfo/star1_gray"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star_gray"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+merchantsinfo/star1"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star" />

                    <ImageView
                        android:id="@+merchantsinfo/star2_gray"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star_gray"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+merchantsinfo/star2"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star" />

                    <ImageView
                        android:id="@+merchantsinfo/star3_gray"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star_gray"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+merchantsinfo/star3"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star" />

                    <ImageView
                        android:id="@+merchantsinfo/star4_gray"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star_gray"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+merchantsinfo/star4"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star" />

                    <ImageView
                        android:id="@+merchantsinfo/star5_gray"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star_gray"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+merchantsinfo/star5"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/merchant_star" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+merchantsinfo/line1"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+merchantsinfo/clic_layout1"
            android:background="@drawable/line_gray" />

        <RelativeLayout
            android:id="@+merchantsinfo/clic_layout2"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@+merchantsinfo/line1"
            android:background="@drawable/clic_gray"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+merchantsinfo/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/merchantsinfo_address" />

            <TextView
                android:id="@+merchantsinfo/merchantsinfo_address"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="30dip"
                android:layout_toRightOf="@+merchantsinfo/icon1"
                android:textColor="@color/merchantsinfo_text1" />

            <ImageView
                android:layout_width="8.8dip"
                android:layout_height="11.3dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/more_arrow" >
            </ImageView>
        </RelativeLayout>

        <ImageView
            android:id="@+merchantsinfo/line2"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+merchantsinfo/clic_layout2"
            android:background="@drawable/line_gray" />

        <RelativeLayout
            android:id="@+merchantsinfo/clic_layout3"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@+merchantsinfo/line2"
            android:background="@drawable/clic_gray"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+merchantsinfo/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/merchantsinfo_phone"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+merchantsinfo/merchantsinfo_phone"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="30dip"
                android:layout_toRightOf="@+merchantsinfo/icon2"
                android:textColor="@color/merchantsinfo_text1" />

            <ImageView
                android:layout_width="8.8dip"
                android:layout_height="11.3dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/more_arrow" >
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+merchantsinfo/layout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+merchantsinfo/layout2"
        android:layout_marginLeft="6.7dip"
        android:layout_marginRight="6.7dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_frame_gray" >

        <RelativeLayout
            android:id="@+merchantsinfo/clic_layout4"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/clic_gray"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/mechantsinfo_traffic"
                    android:textColor="@color/merchantsinfo_text2" />

                <TextView
                    android:id="@+merchantsinfo/traffic"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/merchantsinfo_text1" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+merchantsinfo/line3"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+merchantsinfo/clic_layout4"
            android:background="@drawable/line_gray" />

        <RelativeLayout
            android:id="@+merchantsinfo/clic_layout5"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+merchantsinfo/line3"
            android:background="@drawable/clic_gray"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/mechantsinfo_landmark"
                    android:textColor="@color/merchantsinfo_text2" />

                <TextView
                    android:id="@+merchantsinfo/landmark"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/merchantsinfo_text1" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+merchantsinfo/layout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+merchantsinfo/layout3"
        android:layout_marginLeft="6.7dip"
        android:layout_marginRight="6.7dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_frame_gray" >

        <RelativeLayout
            android:id="@+merchantsinfo/clic_layout6"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/clic_gray"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+merchantsinfo/landmark"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/mechantsinfo_peripheral"
                android:textColor="@color/merchantsinfo_text1" />

            <ImageView
                android:layout_width="8.8dip"
                android:layout_height="11.3dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/more_arrow" >
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>