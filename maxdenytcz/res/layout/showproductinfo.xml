<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_update_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+showproductinfo/title"
        style="@style/headtext"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="@drawable/bg_update_head"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dip" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/takeoutshowproductinfo_text1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+showproductinfo/startMoney"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dip" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/takeoutshowproductinfo_text2"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+showproductinfo/togoProduct"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dip" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/takeoutshowproductinfo_text3"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+showproductinfo/togoTime"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dip" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/takeoutshowproductinfo_text4"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+showproductinfo/smallMoney"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dip" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/takeoutshowproductinfo_text5"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+showproductinfo/togoPlace"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dip" >

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/takeoutshowproductinfo_text6"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+showproductinfo/togoPhone"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+showproductinfo/close"
        style="@style/bt_text"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="6dip"
        android:background="@drawable/btn_exit"
        android:text="@string/com_close"
        android:textColor="@color/white" />

</LinearLayout>