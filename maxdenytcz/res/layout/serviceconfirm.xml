<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+serviceconfirm/layout"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@drawable/headv3_bg" >

        <TextView
            android:id="@+serviceconfirm/head_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="@string/head_orderconfirmation"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+head_orderconfirmation/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_frame_gray"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#88EEEEEE"
            android:orientation="vertical"
            android:paddingTop="6dip" >

            <TextView
                android:id="@+head_orderconfirmation/tx_address"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:text="@string/serviceconfirm"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:background="@drawable/line_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="10dip" >

            <EditText
                android:id="@+serviceconfirm/edit_phone"
                style="@style/text"
                android:layout_width="0dip"
                android:layout_height="34dip"
                android:layout_weight="8"
                android:background="@drawable/edit_com"
                android:focusable="true"
                android:hint="@string/hint_phone"
                android:inputType="number"
                android:textColorHint="@color/hinttext" />

            <Button
                android:id="@+serviceconfirm/bt_send"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="5dip"
                android:layout_weight="2"
                android:background="@drawable/bt_com_orange"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="@string/send"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dip"
        android:background="@drawable/bg_frame_gray"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#44EEEEEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+serviceconfirm/bussinessname"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >

            <com.mdx.mobile.widget.MImageView
                android:id="@+serviceconfirm/img"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/default_h_bg" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_marginLeft="5dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+serviceconfirm/name"
                        style="@style/text"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/orderconfirmation_text7"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+serviceconfirm/price"
                            style="@style/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/sysset_red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/orderconfirmation_text8"
                            android:textColor="@color/black"
                            android:visibility="gone" />

                        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >
        <Button
            android:id="@+serviceconfirm/plus"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/cart_plus" />

        <EditText
            android:id="@+serviceconfirm/ed_num"
            android:layout_width="60dip"
            android:layout_height="25dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/tu"
            android:gravity="center"
            android:inputType="number" />

        <Button
            android:id="@+serviceconfirm/minus"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/cart_minus" />
    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+serviceconfirm/arrow"
                    android:layout_width="8.8dip"
                    android:layout_height="11.3dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/more_arrow"
                    android:visibility="gone" />

                <TextView
                    style="@style/text20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@+serviceconfirm/arrow"
                    android:singleLine="true"
                    android:textColor="@color/sysset_red" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_gray" />
    </LinearLayout>

    <Button
        android:id="@+serviceconfirm/bt_pay"
        android:layout_width="100dip"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dip"
        android:background="@drawable/bt_com_orange"
        android:text="@string/cart_balance"
        android:textColor="@color/white" />

</LinearLayout>