<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="150dip"
    android:background="@drawable/bg_frame_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#eeeeee"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改购买数量"
            android:textColor="@color/textColor_666666" />

        <TextView
            android:id="@+v3_dialog1/price"
            style="@style/headtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/sysset_red" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:gravity="center"
        android:orientation="horizontal"
         >
        <Button
            android:id="@+v3_dialog1/plus"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:background="@drawable/cart_plus" />

        <EditText
            android:focusable="false"
            android:id="@+v3_dialog1/ed_num"
            android:layout_width="60dip"
            android:layout_height="25dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/tu"
            android:gravity="center"
            android:inputType="number" />

        <Button
            android:id="@+v3_dialog1/minus"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/cart_minus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <Button
            android:id="@+v3_dialog1/bt_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bt_com_gray"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+v3_dialog1/bt_submit"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:background="@drawable/bt_com_orange"
            android:text="@string/submit"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>