<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="227dip"
    android:layout_height="118dip"
    android:background="@drawable/bg_update"
    android:orientation="vertical"
    android:paddingLeft="2dip"
    android:paddingRight="2dip"
    android:paddingTop="2dip" >

    <TextView
        android:id="@+update/title"
        style="@style/headtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="1dip"
        android:text="@string/systemprompt"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+update/updatepress"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <com.wjwl.mobile.taocz.untils.MyProgress
            android:id="@+update/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:max="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+update/showText"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <ProgressBar
            android:id="@+update/progressBar"
            style="@android:style/Widget.ProgressBar.Inverse"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:layout_marginRight="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+update/text"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/update_title"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <Button
            android:id="@+update/bt_submit"
            style="@style/bt_text"
            android:layout_width="0dip"
            android:layout_height="34dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/bt_update01"
            android:text="@string/submit"
            android:textColor="@color/white" />

        <Button
            android:id="@+update/bt_cancel"
            style="@style/bt_text"
            android:layout_width="0dip"
            android:layout_height="34dip"
            android:layout_weight="1"
            android:background="@drawable/bt_update02"
            android:text="@string/cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>