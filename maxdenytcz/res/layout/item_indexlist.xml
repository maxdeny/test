<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+item_indexlist/fillPhotoLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mdx.mobile.widget.MImageView
                android:id="@+item_indexlist/fillPhoto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_h_bg"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_item_index_list_text" >

                <TextView
                    android:id="@+item_indexlist/text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+item_indexlist/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+item_indexlist/text"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+item_indexlist/text3"
                    android:layout_width="80dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+item_indexlist/click"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_button_click_default"
            android:clickable="true" />
    </RelativeLayout>

</LinearLayout>