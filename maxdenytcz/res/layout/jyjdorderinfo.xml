<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <RelativeLayout
        android:id="@+tuangouproductinfo/headlayout"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@drawable/head_redandorg"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
         >

          <Button
            android:id="@+tuangouproductinfo/back"
            android:layout_width="58dip"
            android:layout_height="32dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:background="@drawable/head_left"
            />
          
        <TextView
            android:id="@+tuangouproductinfo/text"
            style="@style/headtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            />
        
        <Button
            android:visibility="gone"
            android:id="@+tuangouproductinfo/saixuan"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="筛选"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:background="@drawable/btn_head_left"
             />
        
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="@drawable/bg_index2"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:scrollbars="none">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listview_bg14">
        <com.wjwl.mobile.taocz.widget.MyListView 
        	android:id="@+tuangouproductinfo/mylistview"
        	android:cacheColorHint="#00000000"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        />
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/sousuo_line"
            android:visibility="gone"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dip">
            <com.mdx.mobile.widget.MImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+jyjdorderinfo/img"
                />
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dip">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+jyjdorderinfo/name"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+jyjdorderinfo/number"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+jyjdorderinfo/evryprice"/>
            </LinearLayout>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/more_arrow"/>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/sousuo_line"
            />
        <TextView
            android:id="@+tuangouproductinfo/money"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/sousuo_line"/>
        <TextView
            android:id="@+tuangouproductinfo/state"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/sousuo_line"/>
        <TextView
            android:id="@+tuangouproductinfo/ordernumber"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/sousuo_line"/>
        <TextView
            android:id="@+tuangouproductinfo/date"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/sousuo_line"/>
        <TextView
            android:id="@+tuangouproductinfo/style"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.66dip"
            android:background="@drawable/sousuo_line"/>
    </LinearLayout>
    </ScrollView>
    
</LinearLayout>