<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/business_list"
    android:clickable="true"
    android:padding="7dip" >

    <com.mdx.mobile.widget.MImageView
        android:id="@+item_business_list/businessimg"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@drawable/default_m_bg"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
             <TextView
                 android:id="@+item_business_list/position"
                 style="@style/text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:textColor="#ca2f00" />

            <TextView
                android:id="@+item_business_list/title"
                style="@style/text"
                android:maxLines="1"
				android:layout_toLeftOf="@+item_business_list/position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#333333" />
        </RelativeLayout>

        <TextView
            android:id="@+item_business_list/bus"
            style="@style/text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#808080" />

        <TextView
            android:id="@+item_business_list/telephone"
            style="@style/text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#808080" />

        <TextView
            android:id="@+item_business_list/address"
            style="@style/text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#808080" />
    </LinearLayout>

</LinearLayout>