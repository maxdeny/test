<?xml version="1.0" encoding="utf-8"?>
<com.wjwl.mobile.taocz.widget.TczV3_Item_OrderConfirmation xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/line_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <TextView
            android:id="@+tczv3/businessname"
            style="@style/text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="店铺："
            android:textColor="@color/text333333" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价："
                    android:textColor="@color/text666666" />

                <TextView
                    android:id="@+tczv3/allprice"
                    style="@style/text16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥34"
                    android:textColor="@color/sysset_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量："
                    android:textColor="@color/text666666" />

                <TextView
                    android:id="@+tczv3/allcount"
                    style="@style/text16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/text666666" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/line_gray" />

    <LinearLayout
        android:id="@+tczv3/freelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+tczv3/layout_pstime"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:background="@drawable/clic_gray"
        android:clickable="true"
        android:padding="10dip" >

        <TextView
            style="@style/text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="配送时间"
            android:textColor="@color/text333333" />

        <ImageView
            android:id="@+tczv3/arrow_pstime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/more_arrow" />

        <TextView
            android:id="@+tczv3/ps_time"
            style="@style/text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+tczv3/arrow_pstime"
            android:text="2012-3-3"
            android:textColor="@color/text999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/line_gray" />

    <RelativeLayout
        android:id="@+tczv3/layout_pstype"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:background="@drawable/clic_gray"
        android:clickable="true"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+tczv3/t_pstype"
            style="@style/text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="配送方式"
            android:textColor="@color/text333333" />

        <TextView
            android:id="@+tczv3/ps_info"
            style="@style/text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+tczv3/t_pstype"
            android:textColor="@color/text999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tczv3_bg_bottom" />

</com.wjwl.mobile.taocz.widget.TczV3_Item_OrderConfirmation>