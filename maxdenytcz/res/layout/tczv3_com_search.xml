<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/allbg"
    android:orientation="vertical" >

    <com.wjwl.mobile.taocz.widget.TczV3_HeadLayout
        android:id="@+tczv3/header"
        android:layout_width="fill_parent"
        android:layout_height="44dip" />

    <RelativeLayout
        android:layout_below="@+tczv3/header"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <EditText
            android:id="@+tczv3/ed_search"
            style="@style/text16"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="70dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="输入关键字"
            android:padding="10dip" />

        <Button
            android:id="@+tczv3/bt_search"
            style="@style/text16"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_com_gray"
            android:text="搜索"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>