<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_04_item"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView 
	    android:id="@+id/act_04_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/more_arrow"
	   	android:background="@color/white"
        android:textSize="16sp"
        android:padding="5dp"
		android:text="银行活动"
        />
    <com.mdx.mobile.widget.MImageView
			    android:id="@+id/line_01"
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/gray"
		    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   		android:background="@color/white"
        android:padding="5dp"
        >
       <LinearLayout 
           android:id="@+id/lin_1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           
	       <com.mdx.mobile.widget.MImageView
			    android:id="@+id/act_four_top_left_image_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    />
	        <com.mdx.mobile.widget.MImageView
			    android:id="@+id/line_02"
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:background="@color/gray"
		    />
	       <com.mdx.mobile.widget.MImageView
			    android:id="@+id/act_four_top_right_image_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    />
       </LinearLayout>
        <com.mdx.mobile.widget.MImageView
                android:layout_below="@+id/lin_1"
			    android:id="@+id/line_03"
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/gray"
		    />
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/line_03"
           android:orientation="horizontal">
           
	       <com.mdx.mobile.widget.MImageView
			    android:id="@+id/act_four_bottom_left_image_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    />
	        <com.mdx.mobile.widget.MImageView
			    android:id="@+id/line_04"
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:background="@color/gray"
		    />
	       <com.mdx.mobile.widget.MImageView
			    android:id="@+id/act_four_bottom_right_image_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    />
      	 </LinearLayout>
       
        </RelativeLayout>
</LinearLayout>