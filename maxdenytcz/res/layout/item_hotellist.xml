<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clic_gray"
    android:orientation="horizontal"
    android:padding="5dip" >

    <com.mdx.mobile.widget.MImageView
        android:id="@+item_hotellist/hotelimg"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_h_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+item_hotellist/hotelname"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+item_hotellist/hotelarr"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/more_arrow"
                android:layout_alignParentRight="true"
                android:textColor="#888888" />

            <TextView
                style="@style/text13"
                android:id="@+item_hotellist/productarr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+item_hotellist/hotelarr"
                android:text="@string/hotelsearchlistprice"
                android:textColor="#888888" />
            <TextView
                android:id="@+item_hotellist/hotelprice"
                style="20sp"
                android:textStyle="bold"
                android:layout_marginRight="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+item_hotellist/productarr"
                android:textColor="@color/life_price" />
        </RelativeLayout>

        <TextView
            android:id="@+item_hotellist/hoteladdress"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:textColor="@color/black" />
    </RelativeLayout>

</LinearLayout>