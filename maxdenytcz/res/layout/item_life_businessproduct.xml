<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clic_gray"
    android:orientation="horizontal"
    android:padding="5dip" >

    <com.mdx.mobile.widget.MImageView
        android:id="@+item_life_buspro/businessimg"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_h_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+item_life_buspro/businessname"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+item_life_buspro/symbols"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_symbols"
                android:textColor="@color/sysset_red" />

            <TextView
                android:id="@+item_life_buspro/newprice"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+item_life_buspro/symbols"
                android:singleLine="true"
                android:textColor="@color/sysset_red" />

            <TextView
                android:id="@+item_life_buspro/payover"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#888888" />

            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+item_life_buspro/payover"
                android:text="@string/buyover"
                android:textColor="#888888" />
        </RelativeLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+item_life_buspro/star1"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_life_buspro/star2"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_life_buspro/star3"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_life_buspro/star4"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/merchant_star" />

            <ImageView
                android:id="@+item_life_buspro/star5"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/merchant_star" />

            <TextView
                android:id="@+item_life_buspro/comment"
                style="@style/text13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:textColor="@color/black" />

            <TextView
                style="@style/text13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_life_buspro"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>