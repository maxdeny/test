                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/circularizebrand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_height"
                android:text="@string/ccb_pay_orderpay" />
