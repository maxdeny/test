                <LinearLayout style="@style/ccb_pay_item"  android:visibility="gone">

                    <TextView
                        style="@style/ccb_pay_contentText2"
                        android:text="@string/ccb_pay_mbankpay" />

                   <TextView
                        android:id="@+id/mbankpay"
                        style="@style/ccb_pay_listInput1"
