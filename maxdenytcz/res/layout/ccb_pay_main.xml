            <LinearLayout
                style="@style/ccb_pay_list2"
                android:layout_marginTop="@dimen/devider_height" >

                <LinearLayout style="@style/ccb_pay_item" >

                    <TextView
                        style="@style/ccb_pay_contentText2"
                        android:text="@string/ccb_pay_merchantname" />

                   <TextView
                        android:id="@+id/merchantid"
                        style="@style/ccb_pay_listInput1"
                         >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/ccb_pay_devider" />

                <LinearLayout style="@style/ccb_pay_item" >

                    <TextView
                        style="@style/ccb_pay_contentText2"
                        android:text="@string/ccb_pay_orderidnum" />

                   <TextView
                        android:id="@+id/orderidnum"
                        style="@style/ccb_pay_listInput1"
                         >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/ccb_pay_devider" />

                <LinearLayout style="@style/ccb_pay_item" >

                    <TextView
                        style="@style/ccb_pay_contentText2"
                        android:text="@string/ccb_pay_payment" />

                    <TextView
                        android:id="@+id/payment"
                        style="@style/ccb_pay_listInput1"
                         >
                    </TextView>
                </LinearLayout>

                <LinearLayout style="@style/ccb_pay_devider" />
