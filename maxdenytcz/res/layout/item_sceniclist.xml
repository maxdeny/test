<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clic_gray"
    android:padding="5dip" >

    <com.mdx.mobile.widget.MImageView
        android:id="@+item_sceniclist/productimg"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="#11000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_h_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="80dip"
        android:layout_toRightOf="@+item_sceniclist/productimg"
        android:orientation="vertical" >

        <TextView
            android:id="@+item_sceniclist/scenicname"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+item_sceniclist/star1"
                android:layout_width="16.7dip"
                android:layout_height="15.3dip"
                android:background="@drawable/sceniclist_star_red" />

            <ImageView
                android:id="@+item_sceniclist/star2"
                android:layout_width="16.7dip"
                android:layout_height="15.3dip"
                android:layout_toRightOf="@+item_sceniclist/star1"
                android:background="@drawable/sceniclist_star_red" />

            <ImageView
                android:id="@+item_sceniclist/star3"
                android:layout_width="16.7dip"
                android:layout_height="15.3dip"
                android:layout_toRightOf="@+item_sceniclist/star2"
                android:background="@drawable/sceniclist_star_red" />

            <ImageView
                android:id="@+item_sceniclist/star4"
                android:layout_width="16.7dip"
                android:layout_height="15.3dip"
                android:layout_toRightOf="@+item_sceniclist/star3"
                android:background="@drawable/sceniclist_star_red" />

            <ImageView
                android:id="@+item_sceniclist/star5"
                android:layout_width="16.7dip"
                android:layout_height="15.3dip"
                android:layout_toRightOf="@+item_sceniclist/star4"
                android:background="@drawable/sceniclist_star_red" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_sceniclist_text1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+item_sceniclist/distance"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+item_sceniclist/arrow"
        android:layout_width="8.8dip"
        android:layout_height="11.3dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/more_arrow" />

    <TextView
        android:id="@+item_sceniclist/qi"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+item_sceniclist/arrow"
        android:text="@string/item_sceniclist_text2"
        android:textColor="@color/black" />

    <TextView
        android:id="@+item_sceniclist/price"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dip"
        android:layout_toLeftOf="@+item_sceniclist/qi"
        android:textColor="@color/sysset_red" />

</RelativeLayout>