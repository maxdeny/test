<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+waimaiorderitem/linear" 
    android:orientation="vertical"
    android:background="@drawable/clic_gray">
    <TextView 
            android:id="@+waimaiorderitem/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:layout_marginLeft="16dip"
            android:textSize="16sp"/>
    
    <LinearLayout 
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout 
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="16dip"
        android:paddingBottom="12dip">
        <TextView 
            android:id="@+waimaiorderitem/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"/>
        <TextView 
            android:id="@+waimaiorderitem/ordernuber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"/>
        <TextView 
            android:id="@+waimaiorderitem/who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView 
            	android:id="@+waimaiorderitem/phone"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="#666666"/>
            	<TextView 
            	android:id="@+waimaiorderitem/beitai"
            	android:visibility="gone"
            	android:layout_marginLeft="16dip"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        	<TextView 
            	android:id="@+waimaiorderitem/money"
            	android:layout_width="0dip"
            	android:layout_weight="1"
            	android:layout_height="wrap_content"
            	android:textColor="#666666"/>
        	<TextView 
            	android:id="@+waimaiorderitem/state"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="#0066cc"
            	android:layout_marginRight="20dip"/>
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:contentDescription="@string/about_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/more_arrow"
        android:layout_marginRight="12dip"/>
    </LinearLayout>

</LinearLayout>