<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dip" >
        <ImageView
	        android:layout_width="20dp"
	        android:layout_height="12dp"
	        android:background="@drawable/icon_arrow_submenu"
	        android:layout_gravity="right"
	        android:layout_marginRight="20dp" />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_bg_submenu"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginRight="10dp" 
        >
        <LinearLayout 
            android:id="@+id/li_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
	        <Button
		        android:id="@+id/btn_share"
		        style="@style/text14"
		        android:layout_width="120dp"
		        android:layout_height="50dp"
		        android:background="@null"
		        android:drawableLeft="@drawable/icon_share"
		        android:drawablePadding="18dp"
		        android:gravity="left|center_vertical"
		        android:paddingLeft="13dp"
		        android:text="分享"
		        android:textColor="@drawable/white" />

		    <ImageView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/line" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/li_home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
	    <Button
	        android:id="@+id/btn_home_page"
	        style="@style/text14"
	        android:layout_width="120dp"
	        android:layout_height="50dp"
	        android:background="@null"
	        android:drawableLeft="@drawable/guid_home_white"
	        android:drawablePadding="15dp"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="10dp"
	        android:text="首页"
	        android:textColor="@drawable/white" />
	
	    <ImageView
	        android:id="@+id/line_home_page"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/line" />
    </LinearLayout>
 	<LinearLayout 
        android:id="@+id/li_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
	    <Button
	        android:id="@+id/btn_mine"
	        style="@style/text14"
	        android:layout_width="120dp"
	        android:layout_height="50dp"
	        android:background="@null"
	        android:drawableLeft="@drawable/guid_my_white"
	        android:drawablePadding="15dp"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="10dp"
	        android:text="我的"
	        android:textColor="@drawable/white" />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>