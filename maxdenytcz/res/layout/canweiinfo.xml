<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+canwei/headlayout"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@drawable/header_top"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
         >
          <Button
            android:id="@+canwei/back"
            android:layout_width="58dip"
            android:layout_height="32dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:background="@drawable/btn_head_right"
            />
        <TextView
            android:id="@+canwei/text"
            style="@style/headtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="20:00餐位详情"
            />
        <Button
            android:id="@+canwei/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="其他时刻"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:background="@drawable/btn_head_left"
             />
    </RelativeLayout>
    
    <RadioGroup 
        android:id="@+canwei/group"
        android:layout_below="@+canwei/headlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dip"
        android:gravity="center_vertical">
        <RadioButton 
            android:id="@+canwei/left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/radio_click"
            android:text="附近"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <RadioButton 
            android:id="@+canwei/mid"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/radio_click"
            android:text="全部菜系"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <RadioButton 
            android:id="@+canwei/right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/radio_click"
            android:text="推荐"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_weight="1"/>
    </RadioGroup>
    
    <ListView 
        android:id="@+canwei/listview1"
        android:layout_below="@+canwei/group"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"/>
    <ListView 
        android:id="@+canwei/listview2"
        android:layout_below="@+canwei/group"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"/>
    <ListView 
        android:id="@+canwei/listview3"
        android:layout_below="@+canwei/group"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"/>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+canwei/view1"
        android:visibility="gone"
        android:background="#66000000"/>
    

</RelativeLayout>