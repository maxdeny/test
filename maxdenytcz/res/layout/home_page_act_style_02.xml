<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView 
	    android:id="@+id/act_02_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/more_arrow"
	   	android:background="@color/white"
        android:textSize="16sp"
        android:padding="5dp"
		android:text="银行活动"
        />
        <com.mdx.mobile.widget.MImageView
			    android:id="@+id/line_01"
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/gray"
		    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	   	android:background="@color/white"
        android:padding="5dp"
        >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               
        
	       <com.mdx.mobile.widget.MImageView
			    android:id="@+id/act_two_top_left_image_view"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:background="@drawable/default_h_bg"
		    />
	        <com.mdx.mobile.widget.MImageView
			    android:id="@+id/line_03"
			    android:layout_width="1dp"
			    android:layout_gravity="center_horizontal"
			    android:layout_height="match_parent"
			    android:background="@color/gray"
		    />
	       <com.mdx.mobile.widget.MImageView
			    android:id="@+id/act_two_top_right_image_view"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:background="@drawable/default_h_bg"
		    />
          </LinearLayout>
        </RelativeLayout>
</LinearLayout>