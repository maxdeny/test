<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/allbg"
    android:orientation="vertical" >

    <com.wjwl.mobile.taocz.widget.TczV3_HeadLayout
        android:id="@+tczv3/header"
        android:layout_width="fill_parent"
        android:layout_height="44dip" />

    <TextView
        style="@style/text16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:text="已发送验证码到："
        android:textColor="@color/text666666" />

    <TextView
        android:id="@+reg/phonenum"
        style="@style/text16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/text666666" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_frame_gray"
        android:orientation="vertical" >

        <TextView
            android:id="@+reg/t_verfity"
            style="@style/text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="验证码"
            android:textColor="@color/text999999" />

        <EditText
            android:id="@+reg/ed_vertifycode"
            style="@style/text16"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+reg/t_verfity"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:padding="5dip"
            android:textColor="@color/text333333" />

        <Button
            android:id="@+reg/bt_getvertify"
            style="@style/text12"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/bt_red"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="重发验证码"
            android:textColor="@color/white" />
    </RelativeLayout>

    <Button
        android:id="@+reg/bt_reg"
        style="@style/text18"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bt_red"
        android:text="下一步"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/text14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册视为同意淘常州"
            android:textColor="@color/text666666" />

        <TextView
            android:id="@+reg/xieyi"
            style="@style/text14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《会员注册协议》"
            android:textColor="#009393" />
    </LinearLayout>

</LinearLayout>