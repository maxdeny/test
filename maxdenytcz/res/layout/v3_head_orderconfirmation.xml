<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/allbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/bg_frame_gray" >

        <RelativeLayout
            android:id="@+v3_head_orderconfirmation/clic_layout1"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/clic_gray"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+v3_head_orderconfirmation/text1"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请填写您的收货地址"
                android:textColor="@color/textColor_666666" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/com_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_frame_gray" >

        <RelativeLayout
            android:id="@+v3_head_orderconfirmation/clic_layout2"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/clic_gray"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+v3_head_orderconfirmation/text2"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="送达时间："
                android:textColor="@color/textColor_666666" />

            <TextView
                android:id="@+v3_head_orderconfirmation/time"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+v3_head_orderconfirmation/text2"
                android:text="10:00"
                android:textColor="@color/textColor_666666" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/com_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_frame_gray" >

        <RelativeLayout
            android:id="@+v3_head_orderconfirmation/clic_layout3"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/clic_gray"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+v3_head_orderconfirmation/text3"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="使用优惠券"
                android:textColor="@color/textColor_666666" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/com_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_frame_gray" >

        <RelativeLayout
            android:id="@+v3_head_orderconfirmation/clic_layout4"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/clic_gray"
            android:clickable="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+v3_head_orderconfirmation/text4"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单备注"
                android:textColor="@color/textColor_666666" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/com_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        style="@style/text14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="商品确认："
        android:textColor="@color/textColor_666666" />

</LinearLayout>