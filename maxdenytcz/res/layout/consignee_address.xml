<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.wjwl.mobile.taocz.widget.TczV3_HeadLayout
        android:id="@+tczv3/header"
        android:layout_width="fill_parent"
        android:layout_height="44dip" />

    <LinearLayout
        android:id="@+conigneelist/addlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dip"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone" >

        <TextView
            style="@style/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="您目前还没有收货地址"
            android:textColor="@color/textColor_666666" />

        <Button
            android:id="@+conigneelist/bt_add"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_com_orange"
            android:padding="5dip"
            android:text="添加收货地址"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+conignee/conigneelist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+tczv3/header"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="10dip"
        android:cacheColorHint="#00000000"
        android:divider="@color/none"
        android:dividerHeight="10dip"
        android:listSelector="#00000000" />

</RelativeLayout>