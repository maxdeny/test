<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/allbg"
    android:orientation="vertical" >

    <com.wjwl.mobile.taocz.widget.TczV3_HeadLayout
        android:id="@+tczv3/header"
        android:layout_width="fill_parent"
        android:layout_height="44dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bg_frame_gray"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+reg/phonenum"
            style="@style/text16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:padding="10dip"
            android:textColor="@color/text333333" />
    </LinearLayout>

    <Button
        android:id="@+reg/bt_reg"
        style="@style/text18"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:background="@drawable/bt_red"
        android:text="下一步"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/text14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册视为同意淘常州"
            android:textColor="@color/text666666" />

        <TextView
            android:id="@+reg/xieyi"
            style="@style/text14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《会员注册协议》"
            android:textColor="#009393" />
    </LinearLayout>

</LinearLayout>