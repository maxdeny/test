<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_update_white"
    android:paddingBottom="2dip"
    android:paddingTop="2dip" >

    <RelativeLayout
        android:layout_width="240dip"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+showproduct/title"
            style="@style/headtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/bg_update_head"
            android:gravity="center"
            android:padding="10dip"
            android:textColor="@color/white" />

        <ScrollView
            android:id="@+showproduct/scrollview"
            android:layout_width="fill_parent"
            android:layout_height="260dip"
            android:layout_below="@+showproduct/title"
            android:padding="6dip"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.mdx.mobile.widget.MImageView
                    android:id="@+showproduct/img"
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dip"
                    android:background="@drawable/default_h_bg" />

                <ImageView
                    android:id="@+item_takeoutbox/line"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:background="@drawable/line_gray" />

                <TextView
                    android:id="@+showproduct/menuInfo"
                    style="@style/bt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/takeoutshowproduct_text1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+showproduct/menuInfos"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+showproduct/close"
            style="@style/bt_text"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_below="@+showproduct/scrollview"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/btn_exit"
            android:text="@string/com_close"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>