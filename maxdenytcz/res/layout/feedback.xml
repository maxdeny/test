<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

	<com.wjwl.mobile.taocz.widget.TczV3_HeadLayout
        android:id="@+id/hl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dip"
        android:paddingLeft="13dip"
        android:paddingRight="13dip"
        android:paddingTop="13dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/feedback_type"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/feedback_type"
                android:textColor="#494949" />

            <Button
                android:id="@+id/bt_feedbacktype"
                style="@style/text"
                android:layout_width="135dip"
                android:layout_height="34dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/feedback_type"
                android:background="@drawable/edit_com"
                android:gravity="left"
                android:paddingLeft="10dip"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bt_feedbacktype_spinner"
                android:layout_width="30dip"
                android:layout_height="32.6dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/bt_feedbacktype"
                android:background="@drawable/newddress_spinner" />
        </RelativeLayout>

        <TextView
            android:id="@+id/feedback_content"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:text="@string/feedback_content"
            android:textColor="#494949" />

        <EditText
            android:id="@+id/edtTxt_feedback_content"
            android:layout_width="fill_parent"
            android:layout_height="120dip"
            android:layout_marginTop="14dip"
            android:background="@drawable/edit_com"
            android:gravity="left|top"
            android:hint=""
            android:textColorHint="@color/hinttext" />

        <Button
            android:id="@+id/bt_feedback"
            style="@style/bt_text"
            android:layout_width="135dip"
            android:layout_height="32dip"
            android:layout_gravity="center"
            android:layout_marginTop="18dip"
            android:background="@drawable/btn_login_login"
            android:text="@string/com_submit"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>